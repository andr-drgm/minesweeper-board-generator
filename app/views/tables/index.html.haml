.container.mx-auto.px-4.py-8
  %h1.text-3xl.font-bold.mb-8 All Boards
  - if @tables.any?
    %ul.space-y-4
      - @tables.each do |board|
        %li.block.bg-white.shadow-md.rounded-lg.p-4.hover:bg-blue-50.hover:shadow-lg.transition-all.duration-200
          = link_to table_path(board) do
            %p
              %strong Title:
              = board.title
            %p
              %strong Email:
              = board.email
            %p
              %strong Size:
              = board.width
              x #{board.height}
            %p
              %strong Mines:
              = board.mines
            %p
              %strong Created At:
              = board.created_at.strftime("%B %d, %Y %I:%M %p")
  - else
    %p.text-gray-600 No boards created yet!
  .mt-6.text-center
    = link_to "Back to Home", root_path, class: "inline-block bg-gray-500 text-white font-semibold py-2 px-4 rounded-lg hover:bg-gray-600 transition duration-200"
