.container.mx-auto.px-4.py-8
  %h1.text-3xl.font-bold.text-center.mb-8 Minesweeper Board Generator
  - if notice.present?
    .mb-4
      .bg-green-100.border-l-4.border-green-500.text-green-700.p-4.mb-2
        = notice
  - if flash[:alert].present?
    .mb-4
      - if flash[:alert].is_a?(String)
        .bg-red-100.border-l-4.border-red-500.text-red-700.p-4.mb-2
          = flash[:alert]
      - else
        - flash[:alert].each do |error|
          .bg-red-100.border-l-4.border-red-500.text-red-700.p-4.mb-2
            = error
  = render "tables/create_form"
  .mt-8
    %h2.text-2xl.font-semibold.mb-4 Latest Boards
    = render "tables/boards_list"
    .mt-6.text-center
      = link_to "View All Boards", tables_path, class: "inline-block bg-blue-500 text-white font-semibold py-2 px-4 rounded-lg hover:bg-blue-600 transition duration-200"